<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/sv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        >


        <ImageView
            android:id="@+id/detail_weibo_imageview"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/portrait_pic"/>

        <LinearLayout
            android:layout_width="320dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/detail_weibo__username"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="邱梓峰"
                android:textSize="20sp" />
            <TextView
                android:id="@+id/detail_weibo__date"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:textSize="15sp"
                android:text="2019-01-01"/>


        </LinearLayout>



    </LinearLayout>

            <EditText
                android:id="@+id/item_homepage_edittext"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:enabled="false"
                android:gravity="left|top"
                android:minLines="1"
                android:text="阿里总共分为阿里云四面，蚂蚁两面，菜鸟四面；七面头条分为金融三面，抖音一面，效率工程三面；六个Offer分别是阿里、腾讯、头条、华为、蘑菇街、三七互娱。"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/detail_pic_imageview"
                android:layout_width="match_parent"
                android:layout_height="159dp"
                android:layout_gravity="center"
                android:padding="0dp"
                android:src="@drawable/offer1" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="#aa000000"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="转发 0"
                    android:textSize="16sp"
                    />
                <TextView
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="评论 0"
                    android:textSize="16sp"
                    />
                <TextView
                    android:layout_marginLeft="230dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="赞 0"
                    android:textSize="16sp"
                    />



            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="#aa000000"
                />

            <ListView
                android:id="@+id/comment_listview"
                android:layout_width="match_parent"
                android:layout_height="200dp"></ListView>




        </LinearLayout>






    </ScrollView>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="547dp"
        android:background="#aa000000"
        />






    <LinearLayout
        android:id="@+id/main_lLayoutTabMenu"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">

        <RelativeLayout
            android:id="@+id/relative_detail_repost_menu"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >

            <TextView
                android:id="@+id/main_tvTabMenuItemChannel"
                style="@style/TabMenuItem"
                android:text="转发"
                android:layout_centerInParent="true"
                android:drawableTop="@drawable/tab_repost"
                />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relative_detail_comment_menu"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/main_tvTabMenuItemMessage"
                style="@style/TabMenuItem"
                android:text="评论"
                android:layout_centerInParent="true"
                android:drawableTop="@drawable/tab_commen"
                />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relative_detail_like_menu"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/main_tvTabMenuItemBetter"
                style="@style/TabMenuItem"
                android:text="点赞"
                android:layout_centerInParent="true"
                android:drawableTop="@drawable/tab_like"
                />

        </RelativeLayout>


    </LinearLayout>


</RelativeLayout>